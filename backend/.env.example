# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/wishlist.db

# Telegram Bot
# The bot uses polling to receive updates from Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_MINI_APP_URL=''

# CORS (comma-separated list of allowed origins)
# For local development: http://localhost:4200,https://t.me
# For production: https://t.me
CORS_ORIGIN=http://localhost:4200,https://t.me

# hookah-db API (required for proxy)
HOOKAH_DB_API_URL=https://hdb.coolify.dknas.org
HOOKAH_DB_API_KEY=your-api-key-here

# Mock Authentication (for local development)
# Set to 'true' to skip Telegram init data validation and use mock user
# WARNING: Only use this for local development, never in production!
SKIP_AUTH=false
