{
  "name": "hookah-wishlist",
  "version": "1.0.0",
  "description": "Telegram bot with mini-app for managing hookah tobacco wishlist",
  "private": true,
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:mini-app",
    "dev:backend": "cd backend && npm run dev",
    "dev:mini-app": "cd mini-app && npm run dev",
    "build": "npm run build:backend && npm run build:mini-app",
    "build:backend": "cd backend && npm run build",
    "build:mini-app": "cd mini-app && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "start": "npm run docker:up"
  },
  "keywords": [
    "telegram",
    "bot",
    "hookah",
    "wishlist",
    "mini-app",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "backend",
    "mini-app"
  ],
  "devDependencies": {
    "@twa-dev/types": "^8.0.2"
  }
}
